# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                 controllers.Application.index()
GET         /directions/:routeId              controllers.Application.directions(routeId: String)
GET         /stops/:routeId/:direction        controllers.Application.stops(routeId: String, direction: String)
GET         /predictions/:stopIdsStr          controllers.Application.predictions(stopIdsStr: String, routeIdsStr: Option[String])

POST        /favorites/save/route             controllers.Application.saveFavoriteRoute()
POST        /favorites/save/stop              controllers.Application.saveFavoriteStop()

GET         /groups                           controllers.Application.groupsIndex()
GET         /groups/:groupId                  controllers.Application.getGroup(groupId: Int)
POST        /groups/create                    controllers.Application.createGroup()
POST        /groups/addStop                   controllers.Application.addStopToGroup()
GET         /assets/*file                     controllers.Assets.at(path="/public", file)
