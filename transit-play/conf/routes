# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                    controllers.Application.index()
GET        /directions/:routeId                 controllers.Application.directions(routeId: String)
GET        /stops/:routeId/:direction           controllers.Application.stops(routeId: String, direction: String)
GET        /predictions/:stopId/:routeId        controllers.Application.predictions(routeId: String, stopId: Int)
GET         /favorites/save/route/:routeId      controllers.Application.saveFavRoute(routeId: String)
GET         /favorites/save/stop/:routeId/:direction/:stopId      controllers.Application.saveFavStop(routeId: String, direction:String, stopId: Int)
#GET        /favorites/route/save/:routeId                          controllers.Application.saveFavoriteRoute(routeId: String)
#GET        /favorites/stop/save/:routeId/:direction/:stopId        controllers.Application.saveFavoriteStop(routeId: String, direction:String, stopId: Integer)

# Map static resources from the /public folder to the /assets URL path
#GET        /assets/*file                                           controllers.Assets.at(path="/public", file)
